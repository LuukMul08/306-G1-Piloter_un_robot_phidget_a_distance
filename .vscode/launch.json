{
    "version": "0.2.0",
    "configurations": [
   
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/code/backend/server.js",
            "cwd": "${workspaceFolder}/code/backend",
            "restart": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5501/code/frontend/index.html",
            "webRoot": "${workspaceFolder}/code/frontend"
        }
    ]
}
